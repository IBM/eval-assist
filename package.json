{
    "name": "eval-assist",
    "version": "1.0.0",
    "description": "EvalAssist is an open-source project that simplifies using large language models as evaluators (LLM-as-a-Judge) of the output of other large language models by supporting users in iteratively refining evaluation criteria in a web-based user experience.",
    "scripts": {
        "prepare": "node shared/scripts/package_scripts.js prepare",
        "install:backend": "node shared/scripts/package_scripts.js install_backend",
        "install:frontend": "cd frontend && npm install",
        "install": "concurrently --kill-others-on-fail \"npm run install:backend\" \"npm run install:frontend\"",
        "start:backend": "node shared/scripts/package_scripts.js start_backend",
        "_start:frontend": "node shared/scripts/package_scripts.js start_frontend",
        "start:frontend": "dotenv -e .env -- npm run _start:frontend",
        "start": "npm run prisma && concurrently \"npm run start:backend\" \"npm run start:frontend\"",
        "prisma:prepare:backend": "node shared/scripts/package_scripts.js prisma_prepare_backend",
        "prisma:prepare:frontend": "node shared/scripts/package_scripts.js prisma_prepare_frontend",
        "prisma:prepare": "concurrently \"npm run prisma:prepare:frontend\" \"npm run prisma:prepare:backend\"",
        "prisma:generate:backend": "node shared/scripts/package_scripts.js prisma_generate_backend",
        "prisma:generate:frontend": "node shared/scripts/package_scripts.js prisma_generate_frontend",
        "prisma:generate": "npm run prisma:generate:frontend && npm run prisma:generate:backend",
        "prisma:sync": "node shared/scripts/package_scripts.js prisma_sync",
        "prisma": "npm run prisma:prepare && npm run prisma:generate && npm run prisma:sync",
        "db": "cd shared/localdb/ && docker compose -f postgres.yml up -d",
        "pre-commit:backend": "node shared/scripts/package_scripts.js pre_commit_backend",
        "pre-commit:frontend": "cd frontend && npm run pre-commit",
        "pre-commit": "concurrently \"npm run pre-commit:backend\" \"npm run pre-commit:frontend\"",
        "clean:frontend": "rimraf frontend/node_modules frontend/prisma/schema.prisma",
        "clean:backend": "rimraf backend/venv backend/prisma/schema.prisma",
        "clean": "concurrently \"npm run clean:frontend\" \"npm run clean:backend\" && rimraf node_modules",
        "check:python": "python3 shared/scripts/check_python_version.py",
        "freeze-deps:backend": "node shared/scripts/package_package_scripts.js freeze_deps_backend",
        "docker:build:backend": "npm run prisma:prepare:backend && cd backend && docker build -t eval-assist-backend .",
        "docker:build:frontend": "npm run prisma:prepare:frontend && cd frontend && docker build -t eval-assist-frontend ."
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/IBM/eval-assist.git"
    },
    "keywords": [
        "llm-as-a-judge",
        "unitxt",
        "open-source"
    ],
    "author": "Martín Santillán Cooper",
    "license": "Apache-2.0",
    "bugs": {
        "url": "https://github.com/IBM/eval-assist/issues"
    },
    "homepage": "https://github.com/IBM/eval-assist",
    "devDependencies": {
        "concurrently": "8.2.2",
        "dotenv-cli": "8.0.0",
        "rimraf": "6.0.1",
        "wait-on": "8.0.2"
    }
}
